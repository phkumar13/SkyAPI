
@{
    ViewBag.Title = "ParentalControlResults";
}

<h1>SKY</h1>
<p class="lead">Movie Parental Control Level - Result</p>

<hr />


<fieldset disabled>
    <div class="row" style="padding-left:30px;">
        <div class="col-6">
            <div class="form-group row">
                <div class="col-5">
                    <label class="custom-label">Expected Parental Control Level</label>
                </div>
                <div class="col-7">
                    <select name="parentControlLevel" class="form-control">
                        <option value="U">U</option>
                        <option value="PG">PG</option>
                        <option value="12">12</option>
                        <option value="15">15</option>
                        <option value="18">18</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5">
                    <label class="custom-label">Movie Id</label>
                </div>
                <div class="col-7">
                    <input type="text" name="movieId" class="form-control" placeholder="Movie Id.." />
                </div>
            </div>
        </div>
        <br />
        <div class="col-6">
            <div class="form-group row">
                <div class="col-5">
                    <label class="custom-label">Movie - Parental Control Level</label>
                </div>
                <div class="col-7">
                    @ViewBag.StatusMessage
                </div>
            </div>
        </div>
    </div>
</fieldset>
<br />
<div class="row" style="padding-left:15px;">
    <div class="col-6">
        <a type="button" class="btn btn-primary" href="@Url.Action("Check")">Check Another</a>
    </div>
</div>

